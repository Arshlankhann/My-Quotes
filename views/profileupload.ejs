<div class="container">
    <h2>Update Profile Picture</h2>

    <div class="profile-picture-preview">
        <img id="imagePreview" src="/images/uploads/default.jpg" alt="Profile Picture">
    </div>

    <form id="profilePictureForm" autocomplete="off" action="/upload" method="post" enctype="multipart/form-data">
        <label for="profilePicture">Choose New Picture:</label>
        <div class="custom-file-upload">
            <input type="file" id="profilePicture" name="image" accept="image/*" required>
            <span>Choose a file</span> </div>
        <div class="error-message" id="errorMessage"></div>
        <button type="submit">Update Picture</button>
        
    </form>
</div>
    


<script>
    // const form = document.getElementById('profilePictureForm');
    const imagePreview = document.getElementById('imagePreview');
    const fileInput = document.getElementById('profilePicture');
    // const errorMessage = document.getElementById('errorMessage');

    fileInput.addEventListener('change', function(event) {
        const file = event.target.files[0];

        if (file) {
            const reader = new FileReader();

            reader.onload = function(e) {
                imagePreview.src = e.target.result;
            }

            reader.readAsDataURL(file);
        } else {
            imagePreview.src = "/images/uploads/default.jpg"; // Reset to default if no file selected
        }
    });

