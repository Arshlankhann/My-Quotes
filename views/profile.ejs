<body>

    <header>
        <div class="navbar">
            <div class="brand">My Quotes</div>
            <div class="nav-links">
                <a href="/home">Home</a>
                <a href="/profile">Profile</a>
                <a href="/profile/upload">Upload Image</a>
            </div>
            <div class="btn">
                <form method="get" action="/logout"><button>Logout</button></form>
            </div>
        </div>
    </header>

    <div class="thumbnail">
        <div class="image">
            <img src="/images/uploads/<%=user.profilepic%>">
            <form method="get" action="/profile/upload"><button>Upload Image</button></form>
            <h2>Hello, <%=user.name%>
            </h2>
        </div>
    </div>
    <div class="createpost">
        <form method="post" action="/post">
            <h4 class="heading">You can create a post</h4>
            <textarea placeholder="You can write Quotes, Stories, and More—Be a Part of It. Share Yours!" name="content" required></textarea>
            <br>
            <input class="btn1" type="submit" value="Create New Post" />
        </form>
    </div>

    <div class="container">

        <div class="quote-category">
            <h2>Your Posts</h2>
            <div class="quote-list">
                <% user.posts.reverse().forEach(function(post){ %>
                    <div class="quote-card">
                        <p class="quote-text">"<%= post.content%>"</p>
                        <p class="quote-author">- <%= user.username%>
                        </p>
                        <div class="quote-buttons">
                            <a id="likeBtn" href="/like/<%=post._id%>">
                                <%= post.likes.indexOf(user._id)===-1 ? "Like" :"Unlike"%>
                                    <button><i class="fas fa-thumbs-up"></i></button>
                            </a>
                            <a id="editBtn" href="/edit/<%=post._id%>"><button><i class="fas fa-edit"> </i></button></a>

                            <form method="POST" action="/delete/<%=post._id%>?_method=DELETE">
                                <button><i class="fas fa-trash-alt"></i></button>
                            </form>
                        </div>
                    </div>
                    <%})%>
            </div>
        </div>

    </div>


