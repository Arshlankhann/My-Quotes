<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Quotes</title>
    <link rel="stylesheet" href="/profile.css">
</head>

<body>
    <div class="nav">
        <h1>Profile</h1>
        <a method="get" href="/profile/upload">Upload</a>
        <form method="get" action="/home"><button>Home</button></form>
        <form method="get" action="/logout"><button>Logout</button></form>
        
    </div>
    <div class="container">
        <div class="thumbnail">
            <div class="image">
                <img src="/images/uploads/<%=user.profilepic%>">
            </div>
            <h2>Hello, <%=user.name%>
            </h2>
        </div>
        <h4 class="heading">You can write a post</h4>
        <form method="post" action="/post">
            <textarea placeholder="What's in your mind ?" name="content"></textarea>
            <br>
            <input class="btn" type="submit" value="Create New Post" />
        </form>
    </div>
    <div class="postContainer">
        <h4 id="hp">All Post</h4>
        <% user.posts.reverse().forEach(function(post){ %>

            <div class="userPost">
                <h4 class="username">
                    <%= user.username%>
                </h4>
                <br>
                <p>
                    <%= post.content%>
                </p>
                <br>
                <small>
                    <%= post.likes.length%> Likes
                </small>

                <form method="POST" action="/delete/<%=post._id%>?_method=DELETE"><button>Delete</button></form>

                <a id="likeBtn" href="/like/<%=post._id%>">
                    <%= post.likes.indexOf(user._id)===-1 ? "Like" :"Unlike"%>
                </a>
                <a id="editBtn" href="/edit/<%=post._id%>">Edit</a>
            </div>
            <%})%>
    </div>
</body>

</html>